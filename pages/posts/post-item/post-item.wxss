}

.post-author {
  margin: 10rpx 5rpx 5rpx 5rpx;
  display: flex;
  flex-direction: row;
}

.post-author-size {
  width: 100%;
  height: 500rpx;
}

.array {
  display: flex;
  align-items: center;
  flex-direction: column;
}

.post-data {
  margin-left: 10rpx;
  vertical-align: middle;
  margin-bottom: 5rpx;
  font-size: 26rpx;
}

.post-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}

.post-image2 {
  margin-left: 20rpx;
  width: 30rpx;
  height: 30rpx;
  margin: auto 0;
  margin-bottom: 15rpx;
  vertical-align: middle;
}

.post-image {
  margin-left: 16rpx;
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15rpx;
  vertical-align: middle;
}

.post-content {
  color: #666;
  display: flex;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 20rpx;
  line-height: 40rpx;
}

.post-like {
  font-size: 16px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}

.post-like-image {
  height: 16px;
  width: 16px;
  margin-left: 8px;
  vertical-align: middle;
}

.post-like-text {
  font-size: 13px;
  color: #999;
  margin-left: 8rpx;
}
