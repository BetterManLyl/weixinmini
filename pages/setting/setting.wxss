/* pages/setting/setting.wxss */
@import "setting-template/setting-template.wxss";

.container {
  display: flex;
  flex-direction: column;
}

/**圆形图片设置  
border: 0 solid #ff0000;
  border-radius: 100rpx;
  **/

.settingImg {
  width: 200rpx;
  height: 200rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
  border: 0 solid #f00;
  border-radius: 100rpx;
}

.userinfo {
  display: flex;
  flex-direction: row;
}

.userDetail {
  margin: auto 0; /*水平居中*/
  display: flex;
  flex-direction: column;
}

.textuserinfo {
  font-size: 30rpx;
  margin-left: 30rpx;
  text-align: left;
}

.setting {
  margin-top: 60rpx;
  letter-spacing: 5rpx;
}

.xian {
  border: #f2f2f2;
}

.xianclass {
  line-height: 80rpx;
  display: flex;
  flex-direction: column;
}

.button {
  width: 100%;
  color: #666;
  line-height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 0px;
  background: #fff;
  font-size: 28rpx;
  border: none; /*正常来说加上这个是可以去掉边框的*/
}

/** 修改button默认的点击态样式类**/

.button-hover {
  background-color: #f2f2f2;
}

.template {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}
